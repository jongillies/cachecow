<h1>Harvest</h1>

<table>
  <caption></caption>
  <thead>
  <tr>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td>Harvester UUID:</td>
    <td><%= @crop.uuid %></td>
  </tr>
  <tr>
    <td>Crop:</td>
    <td><%= link_to @crop.crop.name, @crop.crop %></td>
  </tr>
  <tr>
    <td>Began At:</td>
    <td><%= @crop.began_at %></td>
  </tr>
  <tr>
    <td>Ended At:</td>
    <td><%= @crop.ended_at %></td>
  </tr>
  <tr>
    <td>Duration:</td>
    <td><%= distance_of_time_in_words @crop.duration if @crop.duration %></td>
  </tr>
  <tr>
    <td>Total Records:</td>
    <td><%= @crop.total_records %></td>
  </tr>
  <tr>
    <td>Number of Changes:</td>
    <td><%= link_to @crop.number_of_changes, changes_path({:q => {:harvester_uuid_cont => @crop.uuid, :transaction_type_cont => "change"}}) %></td>
  </tr>
  <tr>
    <td>Number of Adds:</td>
    <td><%= link_to @crop.number_of_adds, changes_path({:q => {:harvester_uuid_cont => @crop.uuid, :transaction_type_cont => "add"}}) %></td>
  </tr>
  <tr>
    <td>Number of Deletes:</td>
    <td><%= link_to @crop.number_of_deletes, changes_path({:q => {:harvester_uuid_cont => @crop.uuid, :transaction_type_cont => "delete"}}) %></td>
  </tr>
  <tr>
    <td>Complete Change Set:</td>
    <td><%= link_to @crop.total_change_set, changes_path({:q => {:harvester_uuid_cont => @crop.uuid}}) %></td>
  </tr>
  </tbody>
</table>

<%= link_to 'Back', harvests_path %>
