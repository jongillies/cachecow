%h1 Delivery
%table
  %caption
  %thead
    %tr
      %th
      %th
  %tbody
    %tr
      %td Delivery UUID
      %td= @delivery.uuid
    %tr
      %td Transaction UUID
      %td= link_to @delivery.transaction_uuid, transaction_path(@delivery.transaction)
    %tr
      %td Subscriber
      %td= link_to @delivery.transaction.subscription.subscriber.name, subscriber_path(@delivery.transaction.subscription.subscriber) unless @delivery.transaction.nil?
    %tr
      %td Queue time
      %td= @delivery.queue_time
    %tr
      %td Crop
      %td= link_to @delivery.transaction.change.crop.name, crop_path(@delivery.transaction.change.crop) unless @delivery.transaction.nil?
    %tr
      %td Endpoint Response Code
      %td= @delivery.endpoint_response_code
    %tr
      %td Endpoint Response Header
      %td= @delivery.endpoint_response_header
    %tr
      %td Endpoint Response Data
      %td= @delivery.endpoint_response_data
    %tr
      %td Endpoint Response Date
      %td= @delivery.endpoint_response_date
%br/
= link_to 'Back', deliveries_path
