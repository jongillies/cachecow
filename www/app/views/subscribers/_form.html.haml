= semantic_form_for(@subscriber) do |f|
  - if @subscriber.errors.any?
    #error_explanation
      %h2
        = pluralize(@subscriber.errors.count, "error")
        prohibited this subscriber from being saved:
      %ul
        - @subscriber.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :secret_key
    %br/
    = f.text_field :secret_key
  .field
    = f.label :admin_contact
    %br/
    = f.text_field :admin_contact
  .field
    = f.label :technical_contact
    %br/
    = f.text_field :technical_contact
  .actions
    = f.submit
