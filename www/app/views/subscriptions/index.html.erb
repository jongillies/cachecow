<h1>Subscriptions</h1>

<%= search_form_for @q, url: request.path do |c| %>
    <div id="text_search">
      <%= c.text_field :crop_id_eq, :placeholder => "Search any text fields" %>
      <%= c.submit %>
      <%= link_to "clear", request.path %>
    </div>
<% end %>
<br>

<p><%= link_to 'New Subscription', new_subscription_path %></p>

<table>
  <tr>
    <th>Subscription</th>
    <th>Active</th>
    <th>Crop</th>
    <th>Subscriber</th>
    <th>Tractor quantity</th>
  </tr>

  <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= link_to "Show", subscription %></td>
        <td><%= subscription.active %></td>
        <td><%= link_to subscription.crop.name, subscription.crop %></td>
        <td><%= link_to subscription.subscriber.name, subscription.subscriber %></td>
        <td><%= subscription.tractor_quantity %></td>
      </tr>
  <% end %>
</table>

